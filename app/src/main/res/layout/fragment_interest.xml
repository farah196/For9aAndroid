<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"

>

    <data>

        <import type="android.view.View"/>
        <variable
                name="viewInterest"
                type="com.example.farahal_kiswani.for9a.wizard.viewModel.InterestViewModel"/>
    </data>

    <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <android.support.design.widget.TextInputLayout
                android:id="@+id/text_name_layout"
                android:layout_width="300dp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/name"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@={viewInterest.name}"
                    android:hint="أدخل اسمك الكامل"/>

        </android.support.design.widget.TextInputLayout>
        <Button
                android:id="@+id/nameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_name_layout"
                android:layout_centerInParent="true"
                android:textColor="#ffff"
                android:text="تسجيل الدخول"
                android:onClick="@{(v)->viewInterest.onLoginButtonClicked(v)}"
                style="@style/Widget.AppCompat.Button.Colored"/>

    </RelativeLayout>
</layout>