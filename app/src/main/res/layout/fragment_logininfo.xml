<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"

>

    <data>

        <import type="android.view.View"/>
        <variable
                name="viewSignUp"
                type="com.example.farahal_kiswani.for9a.wizard.viewModel.LoginInfoViewModel"/>
    </data>

<RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <android.support.design.widget.TextInputLayout
            android:id="@+id/text_firstname_layout"
            android:layout_width="300dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_margin="30dp"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/mFirstName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@={viewSignUp.firstname}"
                android:hint=" الإسم الأول "/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:id="@+id/text_lastname_layout"
            android:layout_width="300dp"
            android:layout_below="@+id/text_firstname_layout"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/mLastName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@={viewSignUp.lastname}"
                android:hint="إسم العائلة"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:id="@+id/text_email_layout"
            android:layout_width="300dp"
            android:layout_below="@+id/text_lastname_layout"
            android:layout_margin="30dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/mEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@={viewSignUp.email}"
                android:hint="البريد الإلكتروني"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:id="@+id/text_password_layout"
            android:layout_width="300dp"
            android:layout_below="@+id/text_email_layout"
            android:layout_margin="30dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/mPassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@={viewSignUp.password}"
                android:hint="كلمة السر"/>

    </android.support.design.widget.TextInputLayout>
    <Button

            android:id="@+id/mEmailButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_password_layout"
            android:layout_centerInParent="true"

            android:textColor="#ffff"
            android:text="تسجيل الدخول"
            android:onClick="@{(v)->viewSignUp.signup(v)}"
            style="@style/Widget.AppCompat.Button.Colored"/>



</RelativeLayout>
</layout>